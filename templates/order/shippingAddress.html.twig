{% extends 'base.html.twig' %}

{% block title %}Choose Shipping Address{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto px-4 py-16 bg-gray-50 min-h-screen">
        <h1 class="text-2xl font-bold mb-8 text-center text-gray-900">Choose a shipping address</h1>

        {% if app.user.profile.address is not empty %}
            <div class="space-y-4">
                {% for address in app.user.profile.address %}
                    <a href="{{ path('app_order_payment', {idBilling: billingAddress.id, idShipping: address.id}) }}"
                       class="block bg-white border border-gray-200 rounded-lg p-4 hover:border-orange-500 hover:shadow-lg transition">
                        <div class="font-semibold text-gray-900">{{ address.streetNumber }} {{ address.streetName }}</div>
                        <div class="text-gray-700 text-sm">{{ address.zipCode }} {{ address.city }}, {{ address.country }}</div>
                    </a>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-center text-gray-500">No shipping addresses found in your profile.</p>
        {% endif %}
    </div>
{% endblock %}
