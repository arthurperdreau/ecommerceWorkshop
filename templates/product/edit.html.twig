{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto px-4 py-16">
        <h1 class="text-3xl font-bold mb-8 text-center text-gray-900">Edit Product</h1>

        <div class="bg-white shadow-md rounded-xl p-6">
            {{ form_start(form) }}
            {{ form_row(form.name, {'attr': {'class': 'w-full mb-4 p-3 border border-gray-300 rounded focus:ring-2 focus:ring-orange-400'}}) }}
            {{ form_row(form.description, {'attr': {'class': 'w-full mb-4 p-3 border border-gray-300 rounded focus:ring-2 focus:ring-orange-400'}}) }}
            {{ form_row(form.price, {'attr': {'class': 'w-full mb-4 p-3 border border-gray-300 rounded focus:ring-2 focus:ring-orange-400'}}) }}
            {{ form_row(form.stock, {'attr': {'class': 'w-full mb-4 p-3 border border-gray-300 rounded focus:ring-2 focus:ring-orange-400'}}) }}
            {{ form_row(form.category, {'attr': {'class': 'w-full mb-6 p-3 border border-gray-300 rounded focus:ring-2 focus:ring-orange-400'}}) }}

            <button type="submit" class="w-full bg-orange-500 hover:bg-orange-600 text-white font-semibold py-3 rounded transition">
                Save changes
            </button>
            {{ form_end(form) }}
        </div>

        <a href="{{ path('post_image', {id: product.id}) }}"
           class="mt-6 inline-flex items-center justify-center w-full bg-yellow-500 hover:bg-yellow-400 text-white font-semibold py-3 px-4 rounded transition duration-200">
            <i class="bi bi-images mr-2"></i> Manage Images
        </a>

        <div class="mt-6 text-center">
            <a href="{{ path('getStock') }}" class="text-orange-600 hover:underline text-sm">
                ‚Üê Back to stock
            </a>
        </div>
    </div>
{% endblock %}
