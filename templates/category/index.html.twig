{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto px-4 py-10">
        <h1 class="text-2xl font-bold text-center text-gray-900 mb-6">Liste des catégories</h1>

        {% if categories is empty %}
            <p class="text-center text-gray-600">Aucune catégorie disponible.</p>
        {% else %}
            <div class="bg-white shadow-md rounded-lg p-6 space-y-4">
                {% for category in categories %}
                    <div class="p-4 bg-gray-100 rounded hover:bg-gray-200 transition">
                        <p class="text-gray-800 font-medium">{{ category.name }}</p>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
        <a href="{{ path('app_category_create') }}"
           class="bg-orange-500 hover:bg-orange-600 text-white px-8 py-3 rounded shadow font-semibold transition">
            New
        </a>
    </div>
{% endblock %}
