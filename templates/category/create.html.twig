{% extends 'base.html.twig' %}

{% block title %}Ajouter une catégorie{% endblock %}

{% block body %}
    <div class="max-w-xl mx-auto px-4 py-10">
        <h1 class="text-2xl font-bold text-center text-gray-900 mb-6">Ajouter une catégorie</h1>

        <div class="bg-white shadow-md rounded-lg p-6">
            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
            {{ form_widget(form, {
                'attr': {
                    'class': 'w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'
                }
            }) }}

            <div class="flex justify-end">
                <button type="submit"
                        class="bg-orange-500 hover:bg-orange-700 text-white font-semibold py-2 px-6 rounded shadow transition">
                    Valider
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
