{% extends 'base.html.twig' %}

{% block title %}Rate Review Relevance{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto px-4 py-12">
        <div class="bg-white shadow-md rounded-2xl p-8">
            <h1 class="text-2xl font-bold mb-6">Rate the relevance of this review</h1>

            {{ form_start(form) }}
            <div class="mb-6">
                <label for="{{ form.vars.id }}" class="block text-sm font-medium text-gray-700 mb-2">
                    Relevance (1 to 5)
                </label>
                {{ form_widget(form, {
                    attr: {
                        class: 'block w-full p-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500'
                    }
                }) }}
                {{ form_errors(form) }}
            </div>

            <button type="submit"
                    class="bg-green-600 text-white px-6 py-2 rounded hover:bg-green-700 transition">
                Submit
            </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
