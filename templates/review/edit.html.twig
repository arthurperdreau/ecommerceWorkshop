{% extends 'base.html.twig' %}

{% block title %}Modifier l'avis{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-6 text-center">Modifier l'avis</h1>

        <div class="bg-white shadow-md rounded-lg p-6">
            {{ form_start(form) }}
            {{ form_row(form.content, {'attr': {'class': 'w-full mb-4 p-2 border rounded'}}) }}

            <button type="submit" class="bg-yellow-600 text-white px-4 py-2 rounded hover:bg-yellow-700 transition flex items-center gap-2">
                <i class="bi bi-pencil-square"></i>
                Modifier
            </button>
            {{ form_end(form) }}
        </div>

        <div class="mt-6 text-center">
            <a href="{{ path('app_product_show',{id:review.product.id}) }}" class="text-blue-600 hover:underline flex items-center justify-center gap-1">
                <i class="bi bi-arrow-left"></i>
                Retour
            </a>
        </div>
    </div>
{% endblock %}
